configuration "application-lowmem" {
    dflags "-lowmem"
}

configuration "lowmem" {
    dflags "-lowmem"
}

configuration "twitch" {
//    subConfiguration "dialect" "twitch"

    versions \
        "TwitchSupport" \
        "WithTwitchBotPlugin"
}

configuration "twitch-lowmem" {
//    subConfiguration "dialect" "twitch"
    dflags "-lowmem"

    versions \
        "TwitchSupport" \
        "WithTwitchBotPlugin"
}

configuration "dev" {
//    subConfiguration "dialect" "dev"

